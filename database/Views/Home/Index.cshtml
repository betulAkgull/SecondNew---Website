@Html.ActionLink("Create New", "Create")
@model IEnumerable<database.Models.product>

<!DOCTYPE html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SECONDNEW</title>
    <link rel="stylesheet" href="~/Content/style.css" />
    <style>

        body {
            background-color: #c6bcb6;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        .navbar {
            background: #4f3222;
            height: 80px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 1.2rem;
            position: sticky;
            top: 0;
            z-index: 999;
        }

        .navbar__container {
            display: flex;
            justify-content: space-between;
            height: 80px;
            z-index: 1;
            width: 100%;
            max-width: 1300px;
            margin: 0 auto;
            padding: 0 50px;
        }

        #navbar__logo {
            background-color: whitesmoke;
            background-size: 100%;
            -webkit-background-clip: text;
            -moz-background-clip: text;
            -webkit-text-fill-color: transparent;
            -moz-text-fill-color: transparent;
            display: flex;
            align-items: center;
            cursor: pointer;
            text-decoration: white;
            font-size: 2rem;
            font-weight: bold;
        }

        .fa_gem {
            margin-right: 0.5rem;
        }

        .navbar__menu {
            display: flex;
            align-items: center;
            list-style: none;
            text-align: center;
        }

        .navbar__item {
            height: 80px;
        }

        .navbar__links {
            color: whitesmoke;
            display: flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            padding: 0 1rem;
            height: 100%;
        }

        .navbar__btn {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 0 1rem;
            width: 100%;
        }

        .button {
            display: flex;
            justify-content: center;
            align-items: center;
            text-decoration: none;
            padding: 10px 20px;
            height: 100%;
            width: 100%;
            border: none;
            outline: none;
            border-radius: 4px;
            background: #bbab9b;
            color: white;
        }

            .button:hover {
                background: #d4ac6e;
                transition: all 0.3s ease;
            }

        .navbar__links:hover {
            color: #534f4b;
            transition: all 0.3s ease;
        }

        .navbar__container .search-container {
            float: right;
        }

        .navbar__container input[type=text] {
            height: 40px;
            border-radius: 40px;
            padding: 15px;
            margin-top: 8px;
            font-size: 17px;
            border: none;
            color: #674d3c;
        }

        .navbar__container button {
            float: right;
            padding: 6px;
            margin-top: 8px;
            margin-right: 16px;
            background: #f0efef;
            font-size: 17px;
            border: none;
            height: 40px;
            border-radius: 40px;
            cursor: pointer;
            color: black;
            font-weight: bold;
        }

            .navbar__container button:hover {
                background: #a2836e;
            }

        screen and (max-width: 600px) {
            .navbar__container .search-container

        {
            float: none;
        }

        .navbar__container a, .navbar__container input[type=text], .navbar__container .search-container button {
            float: none;
            display: block;
            text-align: left;
            width: 100%;
            margin: 0;
            padding: 14px;
            height: 40px;
        }

        .navbar__container input[type=text] {
            border: 1px solid #674d3c;
        }

        }

        .custom-select {
            justify-content: space-between;
            float: right;
            margin-right: 100px;
        }

        .select {
            padding: 8px 12px;
            background-color: #a2836e;
            border: 2px solid #674d3c;
            cursor: pointer;
            border-radius: 10px;
            font-weight: bold;
            border: 1px solid;
            color: black;
        }

            .select:focus,
            .select:hover {
                outline: none;
                border: 1px solid white;
            }

            .select option {
                background: #FAEBD7;
            }

        select > option:hover {
            color: yellow;
            cursor: pointer;
        }

        .radio {
            border: solid 1px;
            display: flex;
            align-items: center;
            border-radius: 3rem;
            overflow: hidden;
            max-width: 250px;
            margin: 50px auto;
        }

            .radio input[type="radio"] {
                display: none;
            }

            .radio label {
                background: #FFFAF0;
                padding: 1rem;
                width: 250px;
                border-right: solid 1px;
            }

            .radio input[type="radio"]:checked + label {
                background: #a2836e;
                color: white;
            }

        .selected {
            padding: 8px 12px;
            background-color: white;
            border: 3px solid #a2836e;
            cursor: pointer;
            border-radius: 10px;
            font-weight: bold;
            border: 3px solid;
            color: #674d3c;
        }

            .selected:focus,
            .selected:hover {
                outline: none;
                border: 3px solid black;
            }

            .selected option {
                background: #FAEBD7;
            }


        .products .product_slider {
            padding: 1rem;
        }

            .products .product_slider:first-child {
                padding: 2rem;
            }

            .products .product_slider .product_box {
                background-color: whitesmoke;
                border-radius: .5rem;
                border: 3px solid #674d3c;
                text-align: center;
                padding: 3rem 2rem;
                outline-offset: -1rem;
                outline: var(--outline);
                box-shadow: var(--box-shadow);
                transition: .2s linear;
                width: 300px;
            }

                .products .product_slider .product_box:hover {
                    border: 4px solid whitesmoke;
                }

                .products .product_slider .product_box img {
                    height: 15rem;
                    margin-bottom: 10px
                }

                .products .product_slider .product_box h3 a {
                    font-size: 1.25rem;
                    color: #4f3222;
                    display: flex;
                    justify-content: center;
                    text-decoration: none;
                    margin-bottom: 10px;
                }

                    .products .product_slider .product_box h3 a:hover {
                        color: #d4ac6e;
                    }

                .products .product_slider .product_box h4 a {
                    color: #c1502e;
                    text-decoration: none;
                }

                    .products .product_slider .product_box h4 a:hover {
                        color: #d4ac6e;
                    }

                .products .product_slider .product_box p price {
                    font-size: 1rem;
                    color: var(--light-color);
                    padding: .5rem 0;
                    margin-bottom: 10px
                }


        .column {
            float: left;
            width: 25%;
            padding: 0 10px;
        }

        .row {
            margin: 0 -5px;
        }

            .row:after {
                content: "";
                display: table;
                clear: both;
            }

        screen and (max-width: 600px) {
            .column

        {
            width: 100%;
            display: block;
            margin-bottom: 20px;
        }

        }

        .clearbtn {
            display: flex;
            justify-content: center;
            align-items: center;
            text-decoration: none;
            padding: 10px 20px;
            height: 100%;
            width: 100%;
            border: none;
            outline: none;
            border-radius: 4px;
            background: #c1502e;
            color: white;
        }

            .clearbtn:hover {
                background: #d4ac6e;
                transition: all 0.3s ease;
            }

        .filterbtn {
            display: flex;
            justify-content: center;
            align-items: center;
            text-decoration: none;
            padding: 10px 20px;
            height: 100%;
            width: 100%;
            border: none;
            outline: none;
            border-radius: 4px;
            background: #c1502e;
            color: white;
        }

            .filterbtn:hover {
                background: #d4ac6e;
                transition: all 0.3s ease;
            }
    </style>



    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
