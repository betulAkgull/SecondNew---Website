        <title>SECONDNEW</title>
        <link rel="stylesheet" href="~/Content/style.css" />


    </head>
    <body>
        <nav class="navbar">
            <div class="navbar__container">
                <a href="" id="navbar__logo">SECOND NEW</a>
                <div class="navbar__toggle" id="mobile-menu">
                    <span class="bar"></span>
                    <span class="bar"></span>
                    <span class="bar"></span>
                </div>
                <ul class="navbar__menu">

                    <li class="navbar__item">
                        <a href="filter" class="navbar__links"> Art </a>
                    </li>
                    <li class="navbar__item">
                        <a href="filter" class="navbar__links"> Sport </a>
                    </li>
                    <li class="navbar__item">
                        <a href="filter" class="navbar__links"> Music </a>
                    </li>
                    <li class="navbar__item">
                        <a href="filter" class="navbar__links"> Book </a>
                    </li>
                    <li class="navbar__item">
                        <a href="filter" class="navbar__links"> Game </a>
                    </li>
                    <li class="navbar__item">
                        <a href="filter" class="navbar__links"> Handmade </a>
                    </li>
                    <li>
                        <div class="search-container">
                            <input type="text" placeholder="Enter your search" name="search">

                        </div>

                    <li>
                        <form action="filter">
                            <button type="submit">Search</button>
                        </form>

                    </li>


                    <li class="navbar__btn">
                        <a href="signup" class="button"> SignUp </a>
                    </li>

                    <li class="navbar__btn">
                        <a href="signin" class="button"> Login </a>
                    </li>

                </ul>
            </div>
        </nav>
        <div class="row">
            <div class="radio">
                <input type="radio" name="secim" id="r1">
                <label for="r1">Popular</label>

                <input type="radio" name="secim" id="r2">
                <label for="r2">Newest</label>

                <input type="radio" name="secim" id="r3">
                <label for="r3">Sale</label>

            </div>




            <div class="custom-select">
                <select class="select">
                    <option disabled selected>Select sorting</option>
                    <option>Sort by Default</option>
                    <option>Sort by Decrease</option>
                    <option>Sort by Increase</option>
                </select>
            </div>
        </div>

        <section class="products" id=products>
            <div class="product_slider">
                @foreach (var item in Model)
                {
                    <div class="row">


                        <div class="column">
                            <div class="product_box">
                                <!--<img src="pencil.png" alt="" class="card_image"> -->
                                <h3 class="card_title">
                                    <a href="/ViewProduct.html">@Html.DisplayFor(modelItem => item.name)</a>
                                    <p> Date: @Html.DisplayFor(modelItem => item.date) </p>
                                    <p> Condition: @Html.DisplayFor(modelItem => item.condition)</p>
                                    <p class="price">@Html.DisplayFor(modelItem => item.price)</p>
                                    <h4> Condition: @Html.DisplayFor(modelItem => item.status)</h4>
                                    <h4> Seller: <a href="otheruserprofile.html"> @Html.DisplayFor(modelItem => item.sellerUsername) </a></h4>
                                </h3>
                            </div>
                        </div>

                    </div>
                }
            </div>

        </section>


    </body>
    </html>
